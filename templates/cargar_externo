                    <input type="date" id="fecha-fin" required>
                </div>
            </div>
            
            <div class="form-group">
                <label>üíµ Precio por noche (USD)</label>
                <input type="number" id="precio" placeholder="150" min="0" step="0.01" required>
            </div>
            
            <div class="form-group">
                <label>üë§ Nombre del inquilino</label>
                <input type="text" id="inquilino" placeholder="Ej: Juan P√©rez" required>
            </div>
            
            <button type="submit" class="btn" id="btn-submit">
                ‚úÖ Guardar Alquiler
            </button>
        </form>
        
        <div class="success-msg" id="success-msg">
            <h3>‚úÖ ¬°Guardado!</h3>
            <p id="success-text">El alquiler fue cargado correctamente</p>
        </div>
        
        <div class="error-msg" id="error-msg"></div>
        
        <div class="historial">
            <h3>üìã √öltimos alquileres cargados por vos</h3>
            <div id="historial-list">
                <div class="empty-state">Todav√≠a no cargaste ning√∫n alquiler</div>
            </div>
        </div>
    </div>
    
    <script>
        const ORIGEN = '{{ nombre }}';
        
        document.getElementById('cargar-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const btn = document.getElementById('btn-submit');
            btn.disabled = true;
            btn.textContent = '‚è≥ Guardando...';
            
            const data = {
                propiedad: document.getElementById('propiedad').value,
                fecha_inicio: document.getElementById('fecha-inicio').value,
                fecha_fin: document.getElementById('fecha-fin').value,
                precio: parseFloat(document.getElementById('precio').value),
                inquilino: document.getElementById('inquilino').value,
                origen: ORIGEN
            };
            
            try {
                const res = await fetch('/api/cargar-externo', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                const result = await res.json();
                
                if (result.success) {
                    document.getElementById('success-text').textContent = 
                        `Se cargaron ${result.dias} noche(s) en ${data.propiedad}`;
                    document.getElementById('success-msg').classList.add('show');
                    document.getElementById('error-msg').classList.remove('show');
                    
                    // Agregar al historial local
                    agregarHistorial(data);
                    
                    // Limpiar formulario
                    document.getElementById('cargar-form').reset();
                    
                    // Ocultar mensaje despu√©s de 5 segundos
                    setTimeout(() => {
                        document.getElementById('success-msg').classList.remove('show');
                    }, 5000);
                } else {
                    document.getElementById('error-msg').textContent = result.error || 'Error al guardar';
                    document.getElementById('error-msg').classList.add('show');
                    document.getElementById('success-msg').classList.remove('show');
                }
            } catch (err) {
                document.getElementById('error-msg').textContent = 'Error de conexi√≥n';
                document.getElementById('error-msg').classList.add('show');
            }
            
            btn.disabled = false;
            btn.textContent = '‚úÖ Guardar Alquiler';
        });
        
        function agregarHistorial(data) {
            const list = document.getElementById('historial-list');
            const empty = list.querySelector('.empty-state');
            if (empty) empty.remove();
            
            const item = document.createElement('div');
            item.className = 'historial-item';
            item.innerHTML = `
                <div>
                    <span class="prop">${data.propiedad}</span>
                    <span class="fecha">${data.fecha_inicio} ‚Üí ${data.fecha_fin}</span>
                </div>
                <span class="precio">$${data.precio}/noche</span>
            `;
            list.insertBefore(item, list.firstChild);
            
            // Guardar en localStorage
            let historial = JSON.parse(localStorage.getItem('historial_' + ORIGEN) || '[]');
            historial.unshift(data);
            historial = historial.slice(0, 10); // Solo √∫ltimos 10
            localStorage.setItem('historial_' + ORIGEN, JSON.stringify(historial));
        }
        
        // Cargar historial al iniciar
        function cargarHistorial() {
            const historial = JSON.parse(localStorage.getItem('historial_' + ORIGEN) || '[]');
            if (historial.length > 0) {
                const list = document.getElementById('historial-list');
                list.innerHTML = '';
                historial.forEach(data => {
                    const item = document.createElement('div');
                    item.className = 'historial-item';
                    item.innerHTML = `
                        <div>
                            <span class="prop">${data.propiedad}</span>
                            <span class="fecha">${data.fecha_inicio} ‚Üí ${data.fecha_fin}</span>
                        </div>
                        <span class="precio">$${data.precio}/noche</span>
                    `;
                    list.appendChild(item);
                });
            }
        }
        
        cargarHistorial();
    </script>
